{
    "name": "${environmentName}",
    "description": "Blockchain Smartcontract Dev",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth", 
    "containers": [
        {
            "hostname": "mist",
            "template": "debian-stretch",
            "peer-criteria": "MIST-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "MIST-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-blueprint-blockchain/archive/master.zip",
        "ansible-playbook": "all.json",
        "groups": [
            {
                "name": "mist",
                "hostnames": [
                    "mist"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "mist",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "LARGE",
            "validation": "MEDIUM,LARGE,HUGE"
        }
    }
}
