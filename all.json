[
    {
        "hosts": "biab",
        "remote_user": "root",
        "tasks": [
            {
                "name": "add x2go user",
                "user": {
                    "name": "x2go",
                    "comment": "X2GO User",
                    "group": "users",
                    "groups": "sudo", 
                    "generate_ssh_key": "yes",
                    "shell": "/bin/bash"
                }
            },
            {
                "name": "install dirmngr",
                "apt": {
                    "name": "dirmngr",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install apt-transport-https",
                "apt": {
                    "name": "apt-transport-https",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "add x2go repo key",
                "apt_key": {
                    "keyserver": "keys.gnupg.net",
                    "id": "E1F958385BFE2B6E"
                }
            },
            {
                "name": "add node repo key",
                "apt_key": {
                    "keyserver": "keys.gnupg.net",
                    "id": "1655A0AB68576280"
                }
            },
            {
                "name": "add google repo key",
                "apt_key": {
                    "keyserver": "keyserver.ubuntu.com",
                    "id": "1397BC53640DB551"
                }
            },
            {
                "name": "add mist repo key",
                "apt_key": {
                    "keyserver": "keyserver.ubuntu.com",
                    "id": "1C52189C923F6CA9"
                }
            },
            {
                "name": "add microsoft repo key",
                "apt_key": {
                    "keyserver": "keyserver.ubuntu.com",
                    "id": "EB3E94ADBE1229CF"
                }
            },
            {
                "name": "add x2go repo",
                "apt_repository": {
                    "repo": "deb http://packages.x2go.org/debian stretch extras main",
                    "state": "present"
                }
            },
            {
                "name": "add node repo",
                "apt_repository": {
                    "repo": "deb https://deb.nodesource.com/node_9.x stretch main",
                    "state": "present"
                }
            },
            {
                "name": "add ethereum repo",
                "apt_repository": {
                    "repo": "deb http://ppa.launchpad.net/ethereum/ethereum/ubuntu xenial main",
                    "state": "present"
                }
            },
            {
                "name": "add visua studio repo",
                "apt_repository": {
                    "repo": "deb https://packages.microsoft.com/repos/vscode stable main",
                    "state": "present",
                    "update_cache": "yes"
                }
            },
            {
                "name": "upgrade all",
                "apt": {
                    "allow_unauthenticated": "yes",
                    "update_cache": "yes",
                    "upgrade": "yes"
                }
            },
            {
                "name": "install chrome",
                "apt": {
                    "deb": "https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb"
                }
            },
            {
                "name": "install mist",
                "apt": {
                    "deb": "https://github.com/ethereum/mist/releases/download/v0.9.3/Ethereum-Wallet-linux64-0-9-3.deb"
                }
            },
            {
                "name": "install debs",
                "apt": {
                    "name": "{{ item }}",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                },
                "with_items": [
                    "mate-desktop",
                    "x2goserver",
                    "mate-session-manager",
                    "mate-applets",
                    "mate-backgrounds",
                    "mate-control-center",
                    "mate-desktop-environment",
                    "dconf-cli",
                    "google-chrome-stable",
                    "ethereum",
                    "nodejs",
                    "code", 
                    "git"
                ]
            },
            {
                "name": "copy check_wallpaper.sh",
                "copy": {
                    "src": "./files/check_wallpaper.sh",
                    "dest": "/usr/local/bin",
                    "mode": "755"
                }
            },
            {
                "name": "ensure local .config/autostart exists",
                "file": {
                    "path": "/home/x2go/.config/autostart",
                    "recurse": "yes",
                    "state": "directory",
                    "owner": "x2go"
                }
            },
            {
                "name": "copy check_wallpaper.desktop",
                "copy": {
                    "src": "./files/check_wallpaper.desktop",
                    "dest": "/home/x2go/.config/autostart",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "copy wallpaper.jpg",
                "copy": {
                    "src": "./files/wallpaper.jpg",
                    "dest": "/home/x2go",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "fix sudoers", 
                "lineinfile": {
                    "path": "/etc/sudoers", 
                    "state": "present", 
                    "regexp": "^%sudo", 
                    "line": "%sudo ALL=NOPASSWD: ALL"
                }
            }, 
            {
                "name": "copy geth.service",
                "copy": {
                    "src": "./files/geth.service",
                    "dest": "/etc/systemd/system"
                }
            },
            {
                "name": "copy geth default",
                "copy": {
                    "src": "./files/geth.default",
                    "dest": "/etc/default/geth"
                }
            },
            {
                "name": "set network", 
                "lineinfile": {
                    "path": "/etc/default/geth", 
                    "state": "present", 
                    "regexp": "^NETWORK=", 
                    "line": "NETWORK={{ ethereum_network }}"
                }
            }, 
            {
                "name": "install truffle", 
                "npm": {
                    "name": "truffle@latest", 
                    "global": "yes"
                }
            }
        ]
    }
]